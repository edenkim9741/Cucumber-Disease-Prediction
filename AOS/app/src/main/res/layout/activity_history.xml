<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 상태바 영역 -->
    <View
        android:id="@+id/statusBarSpace"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 뒤로가기 버튼 -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:text="←"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:text="나의 오이로그"
        android:textColor="@color/dark_green"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpace" />

    <!-- 필터 칩들을 HorizontalScrollView로 감싸기 -->
    <HorizontalScrollView
        android:id="@+id/filterScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 정상 필터 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/filterNormal"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="11dp"
                android:checkable="true"
                android:checked="true"
                android:text="정상"
                android:textColor="@android:color/black"
                app:checkedIcon="@android:drawable/checkbox_on_background"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipStrokeColor="@android:color/black"
                app:chipStrokeWidth="1dp" />

            <!-- 노균병 필터 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/filterDowny"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:checkable="true"
                android:checked="true"
                android:text="노균"
                android:textColor="@android:color/black"
                app:checkedIcon="@android:drawable/checkbox_on_background"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipStrokeColor="@android:color/black"
                app:chipStrokeWidth="1dp" />

            <!-- 흰가루병 필터 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/filterPowdery"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:checkable="true"
                android:checked="true"
                android:text="흰가루"
                android:textColor="@android:color/black"
                app:checkedIcon="@android:drawable/checkbox_on_background"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipStrokeColor="@android:color/black"
                app:chipStrokeWidth="1dp" />

            <!-- OOD(알 수 없음) 필터 추가 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/filterOod"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:checked="true"
                android:text="ood"
                android:textColor="@android:color/black"
                app:checkedIcon="@android:drawable/checkbox_on_background"
                app:chipBackgroundColor="@color/chip_background_color"
                app:chipStrokeColor="@android:color/black"
                app:chipStrokeWidth="1dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 정렬 버튼 -->
    <LinearLayout
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterScrollView">

        <TextView
            android:id="@+id/sortText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="↕"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortButton" />

</androidx.constraintlayout.widget.ConstraintLayout>