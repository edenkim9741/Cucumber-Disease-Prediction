<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/logoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="QcumbeR"
            android:textSize="94.37px"
            android:textStyle="bold" />
        <!-- 이런 증상을 보여요 -->
        <TextView
            android:id="@+id/symptomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="이런 증상을 보여요"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green" />
        <!-- 증상 사진 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:contentDescription="흰가루병 증상 사진"
            android:scaleType="fitCenter"
            android:src="@drawable/detail_powdery" />
        <!-- 증상 설명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/symptomText1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="주로 잎에 발생해요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/symptomText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="처음에는 잎의 표면에 소량의 흰가루가 밀생하며, 진전되면 잎 전체가 흰가루로 뒤덮혀요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/symptomText3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="오래된 병반상에서는 흰가루가 회백색으로 변하고, 흑색의 소립점(자낭각)이 형성돼요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/symptomText4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="후기 병든 잎은 고사해요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/actionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="이렇게 대처해요"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/actionText1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수확 후 병든 잔재물을 제거하여 태워요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/actionText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="밀식을 피하고 통풍이 잘 되게 해요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/actionText3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="질소질 비료의 과용을 피해요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="60px"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-2dp" />

            <TextView
                android:id="@+id/actionText4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="등록약제를 이용해 방제해요."
                android:textSize="57.67px"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:includeFontPadding="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>