<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="24dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile_circle_background"
            android:background="@drawable/profile_circle_background"
            android:scaleType="centerCrop" />

        <!-- 프로필 사진 변경 -->
        <TextView
            android:id="@+id/changeProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="프로필 사진 변경"
            android:textColor="#007AFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- 빈 공간 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />
        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5EA" />

        <!-- 이름 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="17sp"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="#000000"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김오이"
                android:textSize="17sp"
                android:textColor="#333333"
                android:paddingBottom="18dp" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5EA" />

        </LinearLayout>

        <!-- 이메일 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="17sp"
                android:textColor="#000000"
                android:paddingVertical="10dp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cucumber.jnu.ac.kr"
                android:textSize="17sp"
                android:textColor="#333333"
                android:paddingBottom="18dp" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5EA" />

        </LinearLayout>

        <!-- 비밀번호 변경 -->
        <TextView
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 변경"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="#000000"
            android:padding="20dp" />

        <!-- 마지막 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5EA" />

        <TextView
            android:id="@+id/deleteAccountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="17sp"
            android:textColor="#FF3B30"
            android:padding="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5EA" />

    </LinearLayout>

</ScrollView>
